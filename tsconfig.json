{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"lib": ["ESNext","DOM", "WebWorker"],
		"esModuleInterop": true,
		"types": ["node"],
		"baseUrl": "src",
		"declaration": false,
		"allowJs": true
	},
	"include": ["src", "whisperNode.d.ts"],
	"exclude": ["node_modules", "dist"]
}
